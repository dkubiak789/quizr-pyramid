<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      metal:use-macro="base">

<tal:block metal:fill-slot="content">
    <tal:if tal:condition="python: points is not None">
        <h1>Twój wynik to: ${points}/15 (${int((points / 15.0) * 100)}%)</h1>
        
        <form method="POST" action="${request.route_url('main')}">
            <input type="submit" value="Jeszcze raz" />
        </form>
    </tal:if>
    
    <h2>Tabela wyników</h2>
    <table>
        <tr>
            <th>Użytkownik</th>
            <th>Punkty</th>
        </tr>
        <tr tal:repeat="result results">
            <td>${result[1].name}</td>
            <td>${result[0].points}</td>
        </tr>
    </table>
</tal:block>

</html>